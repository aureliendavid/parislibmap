{

  "manifest_version": 2,
  "name": "ParislibMap",
  "version": "0.7",
  "author": "Aurelien David",
  "homepage_url": "https://github.com/aureliendavid/parislib",

  "description": "Adds a map for books availability to parislibrairies.fr",

  "icons": {
    "32": "icons/bookmap-32.png",
    "64": "icons/bookmap-64.png",
    "128": "icons/bookmap-128.png",
    "256": "icons/bookmap-256.png"
  },

  "background": {
    "scripts": [
        "background.js"
    ]
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{c0d0a683-8bd1-49e4-9203-0ddc1fca93e8}"
    }
  },



  "web_accessible_resources": ["parislib.js", "map.html", "map.js", "static/*", "static/images/*", "icons/*"],

  "permissions": ["<all_urls>", "webRequest", "webRequestBlocking", "storage", "tabs", "scripting"]
}
